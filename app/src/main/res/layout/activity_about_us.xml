<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AboutUsActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#3599C1"
       >






        <View
            android:id="@+id/search222"
            android:layout_width="315dp"
            android:layout_height="251dp"
            android:layout_gravity="center"

            android:layout_marginTop="60dp"
            android:background="@drawable/cheff"
            android:transitionName="logo_Image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.343" />





    </androidx.cardview.widget.CardView>


    <TextView

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ratatouille "
        android:textSize="30sp"
        android:textColor="@color/red"
        android:gravity="center_horizontal"/>
<TextView
    android:textSize="25sp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="An android app lets you posts/share your best recipes and search food recipes based on filters on your preferances and ingredient you have or which you don't have."/>






</LinearLayout>